/dts-v1/;
/include/ "imx51.dtsi"

/ {
	model = "Genesi Efika MX Smartbook";
	compatible = "genesi,imx51-efikasb", "fsl,imx51";

	memory {
		reg = <0x90000000 0x20000000>;
	};

	leds {
		compatible = "gpio-leds";

		mail {
			label = "mail";
			gpios = <&gpio1 3 1>;
			linux,default-trigger = "heartbeat";
		};

		white {
			label = "capslock";
			gpios = <&gpio2 25 0>;
			linux,default-trigger = "none";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";

		power {
			label = "Power";
			gpios = <&gpio2 31 0>;
			linux,code = <116>; /* KEY_POWER */
			gpio-key,wakeup;
		};

		lid {
			label = "Lid";
			gpios = <&gpio3 14 0>;
			linux,input-type = <5>; /* EV_SW */
			linux,code = <0>; /* SW_LID */
			debounce-interval = <1>;
			gpio-key,wakeup;
		};
	};

	sound {
		compatible = "fsl,imx-audio-sgtl5000";
		model = "Efika MX Internal";
		ssi-controller = <&ssi2>;
		audio-routing =
			"MIC_IN", "Mic Jack",
			"Mic Jack", "Mic Bias",
			"Ext Spk", "LINE_OUT";
		audio-codec = <&sgtl5000>;
		mux-int-port = <2>;
		mux-ext-port = <3>;
	};

	backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm1 0 78770>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <6>;
        };
};

&ssi1 {
	fsl,mode = "i2s-slave";
	status = "okay";
};

&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hog>;

	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				169 0x800000c0	/* MX51_PAD_EIM_DTACK__GPIO2_31 (Power button) */
				84  0x80000000	/* MX51_PAD_EIM_A16__GPIO2_10 (WLAN reset) */
				102 0x80000000	/* MX51_PAD_EIM_A22__GPIO2_16 (WLAN power) */
				365 0x80000000	/* MX51_PAD_CSI2_D13__GPIO4_10 (WWAN power?) */
				503 0x80000000	/* MX51_PAD_DI1_PIN12__GPIO3_1 (WLAN switch) */
				87  0x80000000	/* MX51_PAD_EIM_A17__GPIO2_11 (Bluetooth power) */
				105 0x80000000	/* MX51_PAD_EIM_A23__GPIO2_17 (Audio amp enable, 1 = on) */
				741 0x80000000	/* MX51_PAD_GPIO1_6__REF_EN_B (PMIC interrupt) */
				501 0x80000000	/* MX51_PAD_DI1_PIN11__GPIO3_0 (Battery low) */
				379 0x80000000	/* MX51_PAD_CSI2_PIXCLK__GPIO4_15 (Power good) */
				357 0x80000000	/* MX51_PAD_CSI1_VSYNC__GPIO3_14 (Lid switch, 0 = closed) */
				402 0x85	/* MX51_PAD_CSPI1_SS0__GPIO4_24 */
				405 0x85	/* MX51_PAD_CSPI1_SS1__GPIO4_25 */
				343 0x80000000	/* MX51_PAD_CSI1_D8__GPIO3_12 (LVDS enable, 1 = on) */
				724 0x80000000	/* MX51_PAD_GPIO1_2__PWM1_PWMO (Backlight PWM) */
				373 0x80000000	/* MX51_PAD_CSI2_D19__GPIO4_12 (Backlight power, 0 = on) */
				517 0x80000000	/* MX51_PAD_DISPB2_SER_DIO__GPIO3_6 (LVDS reset, 1 = reset) */
				521 0x80000000	/* MX51_PAD_DISPB2_SER_CLK__GPIO3_7 (LVDS power, 1 = on) */
				220 0x80000000	/* MX51_PAD_NANDF_CS0__GPIO3_16 (Camera power, 0 = on) */
				737 0x80000000	/* MX51_PAD_GPIO1_5__GPIO1_5 (USB hub reset, 0 = reset) */
				63  0x80000000	/* MX51_PAD_EIM_D27__GPIO2_9 (USB phy reset, 0 = reset) */
				517 0x80000000	/* MX51_PAD_DISPB2_SER_DIO__GPIO3_6 (Battery, 0 = inserted) */
				725 0x80000000	/* MX51_PAD_GPIO1_3__GPIO1_3 (Alarm LED, 0 = on) */
				140 0x80000000	/* MX51_PAD_EIM_CS0__GPIO2_25 (Caps LED, 1 = on) */
				408 0x80000000	/* MX51_PAD_CSPI1_RDY__GPIO4_26 (Audio clk enable) */
			>;
		};
	};
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart1_1>;
	status = "okay";
};

&i2c2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2_1>;
	clock-frequency = <100000>;
	status = "okay";

	sgtl5000: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clock-frequency = <12288000>;
		VDDA-supply = <&reg_1V65>;
		VDDIO-supply = <&reg_2V775>;
		VDDD-supply = <&reg_1V2_DIG2>;
	};

	battery: battery@0b {
		compatible = "sbs,sbs-battery";
		reg = <0x0b>;
		sbs,battery-detect-gpios = <&gpio3 6 1>;
	};

	lvds: mtl017@3a {
		compatible = "mtl017";
		reg = <0x3a>;
		crtcs = <&ipu 1>;
		edid-i2c = <&i2c2>;
		interface-pix-fmt = "rgb565";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ipu_disp1_1>;
	};
};

&esdhc1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_esdhc1_1>;
	cd-gpios = <&gpio2 27 0>;
	wp-gpios = <&gpio1 1 0>;
	status = "okay";
};

&esdhc2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_esdhc2_1>;
	cd-gpios = <&gpio1 8 0>;
	wp-gpios = <&gpio1 7 0>;
	status = "okay";
};

&ecspi1 {
	fsl,spi-num-chipselects = <1>;
	cs-gpios = <&gpio4 23 0>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_ecspi1_1>;
	fsl,spi-num-chipselects = <2>;
	cs-gpios = <&gpio4 24 0>, <&gpio4 25 0>;
	status = "okay";

	pmic: mc13892@0 {
		compatible = "fsl,mc13892";
		spi-max-frequency = <6000000>;
		reg = <0>;
		#address-cells = <1>;
		#size-cells = <0>;
		interrupt-parent = <&gpio1>;
		interrupts = <6 0x4>;
		fsl,mc13xxx-uses-rtc;

		regulators {
			reg_VDDGP: sw1 {
				regulator-name = "VDDGP";
				regulator-min-microvolt = <850000>;
				regulator-max-microvolt = <1100000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_VCC: sw2 {
				regulator-name = "VCC";
				regulator-min-microvolt = <1225000>;
				regulator-max-microvolt = <1225000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_1V2_DIG1: sw3 {
				regulator-name = "1V2_DIG1";
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <1200000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_1V8_DIG1: sw4 {
				regulator-name = "1V8_DIG1";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_1V8_ANA_PLL: vpll {
				regulator-name = "1V8_ANA_PLL";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_1V65: vdig {
				regulator-name = "1V65";
				regulator-min-microvolt = <1650000>;
				regulator-max-microvolt = <1650000>;
			};

			vsd_3V15: vsd {
				regulator-name = "3V15";
				regulator-min-microvolt = <3150000>;
				regulator-max-microvolt = <3150000>;
			};

			reg_3V3_USB: vusb {
				regulator-name = "3V3_USB";
				regulator-min-microvolt = <3300000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_2V6: vusb2 {
				regulator-name = "2V6";
				regulator-min-microvolt = <2600000>;
				regulator-max-microvolt = <2600000>;
				regulator-boot-on;
				regulator-always-on;
			};

			reg_2V775: vvideo {
				regulator-name = "2V775";
				regulator-min-microvolt = <2775000>;
				regulator-max-microvolt = <2775000>;
			};

			reg_3V_ANA: vaudio {
				regulator-name = "3V_ANA";
				regulator-min-microvolt = <3000000>;
				regulator-max-microvolt = <3000000>;
			};

			reg_1V2_DIG2: vgen1 {
				regulator-name = "1V2_DIG2";
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <1200000>;
			};

			reg_3V15_BOOT: vgen2 {
				regulator-name = "3V15_BOOT";
				regulator-min-microvolt = <3150000>;
				regulator-max-microvolt = <3150000>;
				regulator-always-on;
			};

			reg_1V8_DIG2: vgen3 {
				regulator-name = "1V8_DIG2";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-always-on;
			};

			reg_2V775_BOOT: viohi {
				regulator-name = "2V775_BOOT";
				regulator-min-microvolt = <2775000>;
				regulator-max-microvolt = <2775000>;
				regulator-always-on;
			};

			/* not sure if we need the RTC supply for Smartbook? */
		};
	};

	flash: m25p80 {
		compatible = "sst,sst25vf032b";
		spi-max-frequency = <25000000>;
		reg = <1>;
	};
};

&audmux {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_audmux_1>;
	status = "okay";
};

&pata {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pata_1>;
	status = "okay";
};

&usbotg {
	phy-mode = "utmiw";
	disable-over-current;
	status = "okay";
};

&usbhost1 {
	phy-mode = "ulpi";
	ext-clk;
	disable-over-current;
	chrgvbus-is-vbus-det;
	status = "okay";
};

&usbhost2 {
	phy-mode = "ulpi";
	ext-clk;
	disable-over-current;
	chrgvbus-is-vbus-det;
	status = "okay";
};
